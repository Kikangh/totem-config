/ {
    macros {
        q_minuscule: q_minuscule {
            label = "ZM_q_minuscul";
            compatible = "zmk,behavior-macro";
            wait-ms = <20>;
            tap-ms = <30>;
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp CAPS>
                , <&macro_press &kp LSHFT>
                , <&macro_tap &kp OP_Q>
                , <&macro_release &kp LSHFT>
                , <&macro_tap &kp CAPS>
                ;
        };
        q_maj: q_maj {
            label = "ZM_q_maj";
            compatible = "zmk,behavior-macro";
            wait-ms = <20>;
            tap-ms = <30>;
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp CAPS>
                , <&macro_tap &kp OP_Q>
                , <&macro_tap &kp CAPS>
                ;
        };
        win_list: win_list{
            label = "Current App Window list in Contexts App";
            compatible = "zmk,behavior-macro";
            tap-ms = <40>;
            #binding-cells = <0>;
            bindings
                = <&macro_press &mo ARROW &kp LGUI>
                , <&macro_tap &kp OP_DLR>
                , <&macro_pause_for_release>
                , <&macro_release &mo ARROW &kp LGUI>
                ;
        }
        apps_list: apps_list{
            label = "All Apps Window list in Contexts App";
            compatible = "zmk,behavior-macro";
            tap-ms = <40>;
            #binding-cells = <0>;
            bindings
                = <&macro_press &mo ARROW &kp LGUI>
                , <&macro_tap &kp TAB>
                , <&macro_pause_for_release>
                , <&macro_release &mo ARROW &kp LGUI>
                ;
        }
    };
